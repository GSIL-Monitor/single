/* client/pages/my/my.wxss */

.my .hd {
  position: relative;
  height: 450rpx;
  overflow: hidden;
  background: #e8b1dd;
}

.my .hd .bg {
  width: 100%;
  filter: blur(10px);
}

.my .hd .avatar {
  position: absolute;
  top: 100rpx;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-left: -100rpx;
  will-change: transform;
}

.my .hd text {
  position: absolute;
  top: 340rpx;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}

.my .bd {
  margin-top: 10px;
}
