/* client/pages/order/order.wxss */
.goods-detail-banner{
  height: 500rpx;
}
.goods-detail-banner image {
  width: 100%;
  height: 500rpx;
}

.goods-detail-info {
  position: relative;
  padding: 15rpx 20rpx;
  background: #fff;
}
.goods-detail-info .price{
  position: absolute;
  right: 20rpx;
  bottom: 15rpx;
  color: #f44;
}
.goods-detail-info .price text{
  text-decoration: line-through;
  font-size: 24rpx;
  color: #999;
}

.goods-detail-info .title {
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.goods-detail-info .desc {
  min-height: 24rpx;
  margin-top: 15rpx;
  color: #999;
  font-size: 24rpx;
}

.goods-detail-hd {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.order-type, .order-num {
  padding: 10rpx 30rpx;
  background: #fff;
}

.order-type .sp .van-radio {
  margin-bottom: 20rpx;
}

.order-type .van-radio__label {
  font-size: 26rpx;
}
