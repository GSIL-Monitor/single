/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
@import "/miniprogram_npm/vant-weapp/common/index.wxss";

page {
  line-height: 1;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
}

.color1 {
  color: #e8b1dd;
}

.color11 {
  color: #d78ace;
}

.color2 {
  color: #74bcf4;
}

.color22 {
  color: #57a6f3;
}

text {
  display: inline-block;
}

image {
  display: block;
}

.flex {
  display: flex;
}

.flex1 {
  flex: 1;
}

.jc-c {
  justify-content: center;
}

.ai-c {
  align-items: center;
}

.column {
  flex-direction: column;
}

.relative {
  position: relative;
}

.h10 {
  height: 20rpx;
}

.ft-btn {
  padding: 30rpx 12.5% 0 12.5%;
}

.van-button--primary {
  border: 1px solid #74bcf4 !important;
  background-color: #74bcf4 !important;
}

.van-button--plain.van-button--primary {
  color: #74bcf4 !important;
}

.van-radio__icon--checked{
  color: #57a6f3 !important;
}
